<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iOSFillTest.TestControl">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="colDone" Width="0.01*" />
            <ColumnDefinition x:Name="colLeft" Width="0.99*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2" StrokeThickness="1" Stroke="White" BackgroundColor="Gray" />
        <Rectangle BackgroundColor="#FFFFE040" Scale="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
    </Grid>
</ContentView>

